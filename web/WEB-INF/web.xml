<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>Index.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>Livro</servlet-name>
        <servlet-class>readingTracker.com.br.controller.LivroController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Pessoa</servlet-name>
        <servlet-class>readingTracker.com.br.controller.PessoaController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Tenant</servlet-name>
        <servlet-class>readingTracker.com.br.controller.TenantController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Livro</servlet-name>
        <url-pattern>/livro</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Pessoa</servlet-name>
        <url-pattern>/pessoa</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Tenant</servlet-name>
        <url-pattern>/tenant</url-pattern>
    </servlet-mapping>



</web-app>